/* estilo.css */

/* Define o fundo de toda a aplicação */
.root {
    -fx-background-color: #f2f2f2;
}

/* Estiliza todos os Labels */
.label {
    -fx-font-size: 18px;
    -fx-text-fill: #333333;
}

/* Estiliza todos os Botões */
.button {
    -fx-background-color: #4CAF50;
    -fx-text-fill: white;
    -fx-font-weight: bold;
    -fx-border-radius: 5;
    -fx-background-radius: 5;
    -fx-padding: 8 16 8 16;
}

/* Efeito de hover nos botões */
.button:hover {
    -fx-background-color: #45A049;
}

/* Estiliza a Barra de Menu */
.menu-bar {
    -fx-background-color: #0077cc;
}

/* Estiliza os itens de menu */
.menu-bar .label {
    -fx-text-fill: white;
    -fx-font-size: 14px;
}

/* Estiliza campos de texto */
.text-field {
    -fx-border-color: #cccccc;
    -fx-border-radius: 4;
    -fx-background-radius: 4;
    -fx-padding: 4;
}

/* Estiliza ComboBox */
.combo-box {
    -fx-border-color: #cccccc;
    -fx-border-radius: 4;
    -fx-background-radius: 4;
    -fx-padding: 4;
}

